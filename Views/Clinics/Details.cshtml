@model web.Models.Clinic

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Clinic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.typeOfClinic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.typeOfClinic)
        </dd>

        <dt class = "col-sm-2">
            Doctors
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctors.Count)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Specialty</th>
                </tr>
                @foreach (var item in Model.Doctors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ime)
                            @Html.DisplayFor(modelItem => item.Priimek)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialty)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
