@model web.Models.Appointment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.Ime)
            @Html.DisplayFor(model => model.Doctor.Priimek)
            @Html.DisplayFor(model => model.Doctor.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorsNote)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorsNote)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.Ime)
            @Html.DisplayFor(model => model.Patient.Priimek)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prescription.ID)
        </dd>
        <dt class = "col-sm-2">
            To pay
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Invoice.sum)
        </dd>
        <hr />


        <dt class = "col-sm-2">
            Patient's blood donations to date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.BloodDonations.Count)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Date</th>
                </tr>
                @foreach (var item in Model.Patient.BloodDonations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.date)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
    </div>
    <div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
